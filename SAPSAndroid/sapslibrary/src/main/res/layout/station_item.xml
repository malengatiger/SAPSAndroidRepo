<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    tools:cardCornerRadius="@dimen/mon_divider"
    tools:cardElevation="@dimen/mon_padding"
    android:layout_margin="@dimen/mon_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/PSN_imagex"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/saps_logo" />
        <RelativeLayout
            android:id="@+id/layouta"
            android:layout_toRightOf="@id/PSN_imagex"
            android:layout_marginLeft="@dimen/mon_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="PoliceStationName"
                android:id="@+id/PSN_txtName"
                android:layout_marginTop="@dimen/mon_margin"
                style="@style/Title2TextStyleBlue"
                android:layout_centerVertical="true" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/PSN_layoutCount"
            android:layout_below="@+id/layouta"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/mon_widest"
            android:layout_marginTop="@dimen/mon_padding"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/PSN_txtOfficerCount"
                android:text="0"
                style="@style/BlueCircleSmall"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/PSN_txtCounterLabel"
                android:text="Officers"
                style="@style/TextStyleGreySmall"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/PSN_txtOfficerCount"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/PSN_layoutCount2"
            android:layout_below="@+id/PSN_layoutCount"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/mon_widest"
            android:layout_marginTop="@dimen/mon_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/PSN_txtCountIncidents"
                android:text="0"
                style="@style/RedCircleSmall"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/PSN_txtCounterLabel2"
                android:text="Incidents Responded To"
                style="@style/TextStyleGreySmall"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/PSN_txtCountIncidents"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/distLayout"
            android:layout_marginTop="@dimen/mon_wide"
            android:layout_below="@id/PSN_layoutCount2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/PSN_txtDistance"
                android:text="32.66 KM"
                style="@style/Title3TextStyleGreen"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/PSN_txtDistanceLabel"
                android:text="Distance, as the crow flies"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_toLeftOf="@id/PSN_txtDistance"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_wide"
                style="@style/TextStyleGreySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PSN_playerActions"
            android:layout_below="@id/distLayout"
            android:layout_marginTop="@dimen/mon_wider"
            android:gravity="center"
            android:layout_marginBottom="@dimen/mon_wide"
            android:layout_marginRight="@dimen/mon_wider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconLove"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/iconDirections"
                android:layout_toRightOf="@id/iconLove"
                android:src="@drawable/ic_directions_black_24dp"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/iconChat"
                android:layout_toRightOf="@id/iconDirections"
                android:src="@drawable/ic_face_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/iconEdit"
                android:layout_toRightOf="@id/iconChat"
                android:layout_marginLeft="@dimen/mon_wider"
                android:src="@drawable/ic_create_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </RelativeLayout>


    </RelativeLayout>








</android.support.v7.widget.CardView>